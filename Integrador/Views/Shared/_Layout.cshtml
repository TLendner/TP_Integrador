<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Green Gains</title>
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Meera+Inimai&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <a href='@Url.Action("Index","Home")'><img src="~/img/logo.png" alt="Green Gains Logo"></a>
            </div>

            <nav class="nav-links">
                <a href="/">Home</a>
                <div class="dropdown">
                    <a href="#" class="dropbtn">Información</a>
                    <div class="dropdown-content">
                        <a href='@Url.Action("Mapa","Home")'>Tachos verdes</a>
                        <a href='@Url.Action("Chat","Home")'>Chat AI</a>
                    </div>
                </div>
                <a href='@Url.Action("Tienda","Home")'>Tienda</a>
            </nav>

            <div class="profile-icon">
                @if (Context.Session.GetString("username") != null)
                {
                    var puntos = Context.Session.GetInt32("puntos");
                    if (puntos != null)
                    {
                        <span id="puntos-usuario">@puntos puntos</span>
                    }
                    else
                    {
                        <span id="puntos-usuario">0 puntos</span>
                    }
                    <a href='@Url.Action("Perfil", "Account")'>👤</a>
                }
                else
                {
                    <a href='@Url.Action("Login","Account")'>👤</a>
                }
            </div>
        </div><!-- En el archivo _Layout.cshtml -->
<div class="navbar-right">
    @if (Context.Session.GetString("username") != null)
    {
        <span>Bienvenido, @Context.Session.GetString("username")</span>
    }
    else
    {
        <span>Invitado</span>
    }
</div>

    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="social-links">
            <a href="#">Instagram</a>
            <a href="#">Twitter</a>
            <a href="#">Email</a>
        </div>
        <nav class="footer-nav">
            <a href="/">Home</a>
            <a href='@Url.Action("Mapa","Home")'>Tachos verdes</a>
            <a href='@Url.Action("Chat","Home")'>Chat AI</a>
            <a href='@Url.Action("Tienda","Home")'>Tienda</a>
        </nav>
        <p>&copy; Green Gains 2024</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
